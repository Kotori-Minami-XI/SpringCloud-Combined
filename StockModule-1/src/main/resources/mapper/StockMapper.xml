<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.Kotori.mapper.StockMapper">

    <insert id="updateStockById">
        UPDATE SET `stock_table` stockNum = stockNum + ${delta} WHERE productId = #{productId}
    </insert>

    <insert id="getStockNumById">
        SELECT stockNum FROM `stock_table` WHERE productId = #{productId}
    </insert>
</mapper>